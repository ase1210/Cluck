<!DOCTYPE html>
<html>
  <head>
    <title>CluckApp</title>
    <%= csrf_meta_tags %>
    <%= action_cable_meta_tag %>
    <%= csp_meta_tag %>
    <link href="https://fonts.googleapis.com/css?family=Roboto:400,700" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Noto+Sans+JP:300,400,700,800" rel="stylesheet">
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <% if current_user %>
      <script>
        window.currentUser = <%= render('/api/users/show.json.jbuilder', user: current_user).html_safe %>
      </script>
    <% end %>
  </head>
  <body>
    <%= yield %>
  </body>
</html>
